<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WhereAreYouMobile.UserControls.LoadingUserControl">
    <ContentView.Content>
        <StackLayout>
            <ActivityIndicator HorizontalOptions="Center" VerticalOptions="Center" Color="Red" IsRunning="{Binding IsBusy}" ></ActivityIndicator>
            <Frame x:Name="ContentFrame" IsVisible="{Binding IsBusy,Converter={StaticResource NegateBooleanConverter}}" >
            </Frame>
        </StackLayout>
    </ContentView.Content>
</ContentView>
